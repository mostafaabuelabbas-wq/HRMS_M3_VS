@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.LeaveConfigDto>

@{
    ViewData["Title"] = "Leave Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-light mb-2">Leave Configuration</h2>
            <p class="text-muted mb-0">Define leave types, accrual rules, and eligibility criteria.</p>
        </div>
        <a href="/Leave/Leave/EditType" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-2">
            <i class="fas fa-plus-circle"></i> Create New Policy
        </a>
    </div>

    <!-- Feedback Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
            <i class="fas fa-check-circle fs-4 me-3"></i>
            <div>@TempData["Success"]</div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
            <div>@TempData["Error"]</div>
        </div>
    }

    <!-- Cards Grid -->
    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="mb-3 opacity-25">
                    <i class="fas fa-clipboard-list fa-4x text-muted"></i>
                </div>
                <h5 class="text-muted fw-normal">No leave policies have been configured yet.</h5>
                <p class="text-muted small">Click "Create New Policy" to get started.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 overflow-hidden">
                        <!-- Card Header using specific colors based on leave type -->
                        <div class="card-header border-0 py-3 px-4 d-flex justify-content-between align-items-center" 
                             style="background: @GetHeaderColor(item.leave_type);">
                            <h5 class="mb-0 fw-bold text-white d-flex align-items-center gap-2">
                                <i class="@GetIcon(item.leave_type)"></i> @item.leave_type
                            </h5>
                            <span class="badge bg-black bg-opacity-25 text-white rounded-pill px-3">Active</span>
                        </div>

                        <div class="card-body p-4 d-flex flex-column">
                            <p class="text-muted small mb-4 flex-grow-1">
                                @(string.IsNullOrWhiteSpace(item.leave_description) ? "No description provided." : item.leave_description)
                            </p>

                            <!-- Rules Grid -->
                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <div class="p-3 bg-secondary bg-opacity-10 rounded-3 text-center h-100 border border-secondary border-opacity-10">
                                        <div class="text-muted small text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">Notice Period</div>
                                        <div class="fw-bold text-light fs-5">@item.notice_period <span class="fs-6 text-muted fw-normal">days</span></div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 bg-secondary bg-opacity-10 rounded-3 text-center h-100 border border-secondary border-opacity-10">
                                        <div class="text-muted small text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">Max Duration</div>
                                        <div class="fw-bold text-light fs-5">@item.max_duration <span class="fs-6 text-muted fw-normal">days</span></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Eligibility -->
                            <div class="mb-4">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <i class="fas fa-users-cog text-secondary"></i>
                                    <span class="small fw-bold text-uppercase text-secondary">Eligibility</span>
                                </div>
                                <div>
                                    @if(item.eligibility_rules == "All" || string.IsNullOrWhiteSpace(item.eligibility_rules))
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">Everyone</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-3 text-wrap text-start lh-sm">
                                            @item.eligibility_rules
                                        </span>
                                    }
                                </div>
                            </div>
                            
                            <!-- Action Button -->
                            <a href="/Leave/Leave/EditType?id=@item.leave_type" class="btn btn-outline-primary w-100 rounded-pill mt-auto">
                                <i class="fas fa-cog me-2"></i> Configure Settings
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
</style>

@functions {
    public string GetHeaderColor(string type)
    {
        return type.ToLower() switch
        {
            "vacation" => "linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%)", /* Blue */
            "sick" => "linear-gradient(135deg, #ef4444 0%, #f43f5e 100%)", /* Red */
            "maternity" => "linear-gradient(135deg, #d946ef 0%, #ec4899 100%)", /* Pink */
            "probation" => "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)", /* Orange */
            _ => "linear-gradient(135deg, #334155 0%, #475569 100%)" /* Slate */
        };
    }

    public string GetIcon(string type)
    {
        return type.ToLower() switch
        {
            "vacation" => "fas fa-plane",
            "sick" => "fas fa-first-aid",
            "maternity" => "fas fa-baby",
            "probation" => "fas fa-user-check",
            _ => "fas fa-calendar-alt"
        };
    }
}