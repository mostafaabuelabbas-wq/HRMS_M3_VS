@model HRMS_M3_VS.Areas.Attendance.Models.AssignCustomDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign Custom/Special Shift</h2>

<form method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label">Employee</label>
        <select asp-for="employee_id" class="form-control"
                asp-items="@(new SelectList(ViewBag.Employees, "employee_id", "full_name"))" required>
            <option value="">-- Select Employee --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Shift Name</label>
        <input asp-for="shift_name" class="form-control" placeholder="e.g. VIP Security Detail" required />
    </div>

    <div class="row">
        <div class="col-6 mb-3"> <label>Start Time</label> <input asp-for="start_time" type="time" class="form-control" required /> </div>
        <div class="col-6 mb-3"> <label>End Time</label> <input asp-for="end_time" type="time" class="form-control" required /> </div>
    </div>

    <div class="row">
        <div class="col-6 mb-3"> <label>Start Date</label> <input asp-for="start_date" type="date" class="form-control" /> </div>
        <div class="col-6 mb-3"> <label>End Date</label> <input asp-for="end_date" type="date" class="form-control" /> </div>
    </div>

    <button type="submit" class="btn btn-warning">Create & Assign</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>