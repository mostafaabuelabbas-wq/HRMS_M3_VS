@model HRMS_M3_VS.Areas.Employee.Models.ContractRenewViewModel
@{
    ViewData["Title"] = "Renew Contract";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">Renew Contract #@Model.ContractId</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-4">
            <h5>Current Contract Information</h5>
            <p><strong>Employee:</strong> @Model.EmployeeName</p>
            <p><strong>Type:</strong> @Model.CurrentType</p>
            <p><strong>Current End Date:</strong> @Model.CurrentEndDate?.ToString("dd MMM yyyy")</p>
        </div>

        <form asp-action="Renew" method="post" class="row g-3">
            <input asp-for="ContractId" type="hidden" />
            
            <div class="col-md-6">
                <label asp-for="NewEndDate" class="form-label">New End Date</label>
                <input asp-for="NewEndDate" type="date" class="form-control" />
                <span asp-validation-for="NewEndDate" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Notes" class="form-label">Renewal Notes (Optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-12 mt-4">
                <button type="submit" class="btn btn-success">Confirm Renewal</button>
                <a asp-action="Details" asp-route-id="@Model.ContractId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>