@model HRMS_M3_VS.Areas.Employee.Models.AssignRoleViewModel

<h2 class="fw-bold mb-4">Assign Role</h2>

<div class="card p-4 shadow-sm">
    <form method="post">

        <div class="mb-3">
            <label class="form-label fw-semibold">Employee</label>
            <input class="form-control" value="@Model.FullName" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Department</label>
            <input class="form-control" value="@Model.Department" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Current Role</label>
            <input class="form-control" value="@Model.CurrentRoleName" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Assign New Role</label>
            <select asp-for="NewRoleId" class="form-select">
                <option value="">-- Select --</option>
                @foreach (var role in Model.Roles)
                {
                    <option value="@role.RoleId">@role.RoleName</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>
</div>
