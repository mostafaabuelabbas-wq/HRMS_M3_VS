@model IEnumerable<HRMS_M3_VS.Areas.Employee.Models.TeamAttendanceLogDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Team Attendance";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark fw-bold"><i class="fa fa-users me-2"></i>Team Attendance Logs</h2>

    <!-- Date Filter -->
    <form method="get" class="d-flex gap-2 shadow-sm p-1 bg-white rounded-pill border">
        <input type="date" name="start" class="form-control border-0 rounded-pill" value="@ViewBag.Start.ToString("yyyy-MM-dd")" />
        <span class="align-self-center text-muted">-</span>
        <input type="date" name="end" class="form-control border-0 rounded-pill" value="@ViewBag.End.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-primary rounded-pill px-3">Filter</button>
    </form>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Employee</th>
                    <th>In Time</th>
                    <th>Out Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fa fa-folder-open fa-3x mb-3 opacity-25"></i>
                            <p>No attendance records found for this period.</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var log in Model)
                    {
                        <tr>
                            <!-- Date -->
                            <td class="fw-bold">
                                @(log.entry_time.HasValue? log.entry_time.Value.ToString("yyyy-MM-dd") : "-")
                            </td>

                            <!-- Employee Name -->
                            <td class="text-primary">@log.full_name</td>

                            <!-- In Time -->
                            <td class="text-success font-monospace">
                                @(log.entry_time.HasValue? log.entry_time.Value.ToString("HH:mm") : "-")
                            </td>

                            <!-- Out Time -->
                            <td class="text-danger font-monospace">
                                @(log.exit_time.HasValue? log.exit_time.Value.ToString("HH:mm") : "-")
                            </td>

                            <!-- Duration -->
                            <td>
                                @if (log.duration.HasValue && log.duration > 0)
                                {
                                    <span>@Math.Round(log.duration.Value / 60.0, 1) hrs</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>

                            <!-- Status Logic -->
                            <td>
                                @if (log.login_method == "Leave" || log.login_method == "LeaveSync")
                                {
                                    <span class="badge bg-info text-dark">On Leave</span>
                                }
                                else if (log.exception_id != null)
                                {
                                    <span class="badge bg-warning text-dark">Exception</span>
                                }
                                else if (log.exit_time == null)
                                {
                                    <span class="badge bg-success">Working Now</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Completed</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>