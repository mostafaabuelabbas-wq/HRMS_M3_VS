@{
    ViewData["Title"] = "Override Leave Decision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <!-- Header -->
                <div class="card-header text-white text-center py-4"
                     style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                    <div class="mb-2">
                        <div class="d-inline-flex align-items-center justify-content-center bg-white bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-gavel fs-2"></i>
                        </div>
                    </div>
                    <h3 class="fw-bold mb-1">Override Leave Decision</h3>
                    <p class="mb-0 text-white-50 small">
                        HR Admin Override - Request #@ViewBag.RequestId
                    </p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">

                    <!-- Alerts -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm mb-4">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger border-0 shadow-sm mb-4">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Error"]
                        </div>
                    }

                    <!-- Warning Message -->
                    <div class="alert alert-warning border-0 shadow-sm mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-exclamation-triangle fa-2x me-3 mt-1"></i>
                            <div>
                                <h6 class="fw-bold mb-2">⚠️ Important</h6>
                                <p class="mb-0 small">
                                    This will <strong>reverse</strong> the current decision:
                                </p>
                                <ul class="small mb-0 mt-2">
                                    <li>If <strong>Approved</strong> → Will become <strong>Rejected</strong></li>
                                    <li>If <strong>Rejected</strong> → Will become <strong>Approved</strong></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- FORM -->
                    <form action="/Leave/Leave/OverrideDecision?id=@ViewBag.RequestId" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Request ID (Hidden) -->
                        <input type="hidden" name="id" value="@ViewBag.RequestId" />

                        <!-- Override Reason -->
                        <div class="mb-4">
                            <label for="reason" class="form-label fw-bold text-secondary small text-uppercase">
                                Override Reason <span class="text-danger">*</span>
                            </label>
                            <textarea name="reason"
                                      id="reason"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Explain why this decision is being overridden..."
                                      required></textarea>
                            <div class="form-text small">
                                <i class="fas fa-info-circle me-1"></i>
                                This reason will be added to the leave request and visible to the employee.
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="fas fa-gavel me-2"></i> Override Decision
                            </button>

                            <a href="/Leave/Leave/Index" class="btn btn-outline-secondary btn-lg border-0">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                        </div>

                    </form>
                </div>

                <!-- Footer Note -->
                <div class="card-footer bg-light text-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        HR Admin Override Authority
                    </small>
                </div>

            </div>

        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
