@model IEnumerable<HRMS_M3_VS.Areas.Employee.Models.EmployeeDto>

@{
    ViewData["Title"] = "Direct Reports";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-12 col-xl-10">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-end border-bottom border-secondary pb-3">
                <div>
                    <h6 class="text-uppercase text-primary fw-bold mb-1" style="letter-spacing: 1.5px; font-size: 0.75rem;">Team Management</h6>
                    <h1 class="display-6 fw-bold text-white mb-0">Direct Reports</h1>
                </div>
                <div class="text-md-end mt-3 mt-md-0">
                    <div class="d-inline-flex align-items-center bg-dark px-4 py-2 rounded-pill border border-secondary">
                        <span class="fs-5 fw-bold text-white me-2">@Model.Count()</span>
                        <span class="text-muted small text-uppercase">Total Members</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4 text-muted opacity-50">
                        <i class="fas fa-users fs-1"></i>
                    </div>
                    <h4 class="text-muted fw-normal">No team members found</h4>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        // 1. Initials Logic
                        string initials = "??";
                        string colorClass = "bg-primary";

                        if (!string.IsNullOrWhiteSpace(item.Full_Name))
                        {
                            var parts = item.Full_Name.Trim().Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);
                            if (parts.Length >= 2) initials = $"{parts[0][0]}{parts[parts.Length - 1][0]}".ToUpper();
                            else if (parts.Length == 1 && parts[0].Length >= 2) initials = parts[0].Substring(0, 2).ToUpper();
                            else if (parts.Length == 1) initials = parts[0].Substring(0, 1).ToUpper();

                            // 2. Color Logic (Switched custom 'bg-indigo' to 'bg-warning' for standard Bootstrap support)
                            int nameLen = item.Full_Name.Length;
                            colorClass = (nameLen % 4) switch
                            {
                                0 => "bg-primary",
                                1 => "bg-success",
                                2 => "bg-info",
                                _ => "bg-warning"
                            };
                        }

                        // 3. Status Logic (Switched 'subtle' to solid for Dark Mode visibility)
                        var status = item.Employment_Status ?? "Unknown";
                        var statusBadge = status.ToLower() switch
                        {
                            "active" => "bg-success",
                            "inactive" or "terminated" => "bg-danger",
                            "on leave" => "bg-warning text-dark",
                            _ => "bg-secondary"
                        };

                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="card h-100 overflow-hidden">
                                <!-- Top Accent Line -->
                                <div class="@colorClass" style="height: 4px; width: 100%;"></div>

                                <div class="card-body text-center pt-4 pb-3">
                                    <!-- Avatar -->
                                    <div class="mx-auto mb-3 @colorClass text-white rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 64px; height: 64px;">
                                        <span class="fs-4 fw-bold">@initials</span>
                                    </div>

                                    <!-- Name & Role -->
                                    <h5 class="fw-bold text-white mb-1 text-truncate px-2" title="@item.Full_Name">
                                        @item.Full_Name
                                    </h5>
                                    <p class="text-muted small mb-3 text-truncate">
                                        @(item.Position ?? "Position Not Set")
                                    </p>

                                    <!-- Status Badge -->
                                    <span class="badge rounded-pill fw-medium px-3 py-2 mb-4 @statusBadge">
                                        @status
                                    </span>

                                    <!-- Info Grid -->
                                    <div class="row g-0 border-top border-bottom border-secondary py-2 mb-3 text-start">
                                        <div class="col-6 border-end border-secondary px-3 py-1">
                                            <div class="text-muted small text-uppercase fw-bold" style="font-size: 0.65rem;">ID</div>
                                            <div class="small fw-semibold text-white text-truncate">@item.Employee_Id</div>
                                        </div>
                                        <div class="col-6 px-3 py-1">
                                            <div class="text-muted small text-uppercase fw-bold" style="font-size: 0.65rem;">Dept</div>
                                            <div class="small fw-semibold text-white text-truncate">@(item.Department ?? "-")</div>
                                        </div>
                                    </div>

                                    <!-- Action -->
                                    <a asp-area="Employee"
                                       asp-controller="Home"
                                       asp-action="Profile"
                                       asp-route-id="@item.Employee_Id"
                                       class="btn btn-primary btn-sm w-100">
                                        View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>