@model HRMS_M3_VS.Areas.Attendance.Models.CorrectionRequestDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Correction Request";
}

<h2 class="mb-4 text-warning"><i class="fa fa-tools me-2"></i>Attendance Correction</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-triangle"></i> @ViewBag.Error
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="employee_id" />

            <!-- Date -->
            <div class="mb-3">
                <label class="form-label fw-bold">Date of Incident</label>
                <input asp-for="date" type="date" class="form-control" required />
            </div>

            <!-- Correction Type -->
            <div class="mb-3">
                <label class="form-label fw-bold">Type</label>
                <select asp-for="correction_type" class="form-control">
                    <option value="Missed Check-In">Missed Check-In</option>
                    <option value="Missed Check-Out">Missed Check-Out</option>
                    <option value="Late Arrival">Excused Late Arrival</option>
                    <option value="Early Departure">Excused Early Departure</option>
                </select>
            </div>

            <!-- Reason -->
            <div class="mb-3">
                <label class="form-label fw-bold">Reason</label>
                <textarea asp-for="reason" class="form-control" rows="3" placeholder="Explain why..." required></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-warning text-dark fw-bold">
                    Submit Request
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
