@model HRMS_M3_VS.Areas.Employee.Models.AssignRoleViewModel
@{
    ViewData["Title"] = "Change Employee Role";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger bg-danger bg-opacity-25 text-white border-0 shadow-sm rounded-3 alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-4" style="max-width: 800px;">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-secondary text-decoration-none">Roles Management</a></li>
            <li class="breadcrumb-item active text-white" aria-current="page">Change Role</li>
        </ol>
    </nav>

    <div class="card shadow-lg border border-secondary rounded-4" style="background-color: #1E293B;">
        <div class="card-header bg-transparent border-bottom border-secondary py-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3 border border-primary border-opacity-25">
                    <i class="fas fa-user-cog fa-2x"></i>
                </div>
                <div>
                    <h4 class="mb-1 fw-bold text-white">Change Employee Role</h4>
                    <p class="mb-0 text-secondary">Assign system role and permissions</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">

            <div class="alert bg-dark bg-opacity-50 border border-secondary rounded-3 mb-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="text-secondary small mb-1 text-uppercase fw-bold">Employee</label>
                        <div class="fw-bold text-white">@Model.FullName</div>
                    </div>
                    <div class="col-md-4">
                        <label class="text-secondary small mb-1 text-uppercase fw-bold">Department</label>
                        <div class="fw-bold text-white">@Model.Department</div>
                    </div>
                    <div class="col-md-4">
                        <label class="text-secondary small mb-1 text-uppercase fw-bold">Current Role</label>
                        <div>
                            @if (Model.CurrentRoleName == "SystemAdmin")
                            {
                                <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25"><i class="fas fa-shield-alt me-1"></i>System Admin</span>
                            }
                            else if (Model.CurrentRoleName == "HRAdmin")
                            {
                                <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25"><i class="fas fa-user-tie me-1"></i>HR Admin</span>
                            }
                            else if (Model.CurrentRoleName == "Manager")
                            {
                                <span class="badge rounded-pill bg-info bg-opacity-10 text-info border border-info border-opacity-25"><i class="fas fa-users-cog me-1"></i>Manager</span>
                            }
                            else if (Model.CurrentRoleName == "PayrollOfficer")
                            {
                                <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25"><i class="fas fa-calculator me-1"></i>Payroll Officer</span>
                            }
                            else if (Model.CurrentRoleName == "Employee")
                            {
                                <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25"><i class="fas fa-user me-1"></i>Employee</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25">Unassigned</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="EmployeeId" />

                <div class="mb-4">
                    <label asp-for="NewRoleId" class="form-label fw-bold text-white mb-3">
                        <i class="fas fa-user-tag text-primary me-2"></i>Select New Role
                    </label>
                    <select asp-for="NewRoleId" class="form-select form-select-lg bg-dark text-white border-secondary">
                        <option value="">-- Select a Role --</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.RoleId">
                                @role.RoleName
                            </option>
                        }
                    </select>
                    <span asp-validation-for="NewRoleId" class="text-danger small fw-bold"></span>
                    <div class="form-text text-secondary mt-2">
                        <i class="fas fa-info-circle me-1"></i>
                        This will update the employee's system permissions immediately
                    </div>
                </div>

                <div class="card bg-dark bg-opacity-25 border border-secondary rounded-3 mb-5">
                    <div class="card-body">
                        <h6 class="fw-bold text-white mb-3 text-uppercase small" style="letter-spacing: 0.5px;">Role Descriptions</h6>

                        <div class="row gy-3 gx-3 small text-secondary">
                            
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-shield-alt text-danger me-2"></i>
                                    <div><strong class="text-white">System Admin:</strong> Full system access</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-tie text-warning me-2"></i>
                                    <div><strong class="text-white">HR Admin:</strong> Employee management</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users-cog text-info me-2"></i>
                                    <div><strong class="text-white">Manager:</strong> Team management</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calculator text-primary me-2"></i>
                                    <div><strong class="text-white">Payroll Officer:</strong> Manages payroll calculations</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-success me-2"></i>
                                    <div><strong class="text-white">Employee:</strong> Basic system access</div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 pt-3 border-top border-secondary">
                    <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-lg">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}