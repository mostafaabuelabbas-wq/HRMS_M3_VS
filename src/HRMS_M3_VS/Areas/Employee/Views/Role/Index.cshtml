@model List<HRMS_M3_VS.Areas.Employee.Models.AssignRoleViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Roles Management</h2>
    </div>

    <!-- Card Container -->
    <div class="card shadow border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-4">ID</th>
                        <th class="py-3">Full Name</th>
                        <th class="py-3">Department</th>
                        <th class="py-3">Current Role</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-secondary">#@emp.EmployeeId</td>
                            <td class="fw-semibold text-primary">@emp.FullName</td>
                            <td>@(emp.Department ?? "Not Assigned")</td>
                            
                            <!-- Role Badge Logic -->
                            <td>
                                @if(emp.CurrentRoleName == "SystemAdmin")
                                {
                                    <span class="badge bg-danger">@emp.CurrentRoleName</span>
                                }
                                else if(emp.CurrentRoleName == "HRAdmin")
                                {
                                    <span class="badge bg-warning text-dark">@emp.CurrentRoleName</span>
                                }
                                else if(emp.CurrentRoleName == "Manager")
                                {
                                    <span class="badge bg-info text-dark">@emp.CurrentRoleName</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@(emp.CurrentRoleName ?? "Employee")</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@emp.EmployeeId"
                                   class="btn btn-sm btn-primary shadow-sm">
                                    <i class="fas fa-user-shield me-1"></i> Change Role
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>