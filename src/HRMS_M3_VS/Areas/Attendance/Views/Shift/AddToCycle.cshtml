@model HRMS_M3_VS.Areas.Attendance.Models.AddToCycleDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Link Shift to Cycle";
}

<h2 class="mb-4">Link Shift to Cycle</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle"></i> @ViewBag.Error
    </div>
}

<form method="post" class="card p-4 shadow-sm">

    <!-- 1. Cycle Dropdown -->
    <div class="mb-3">
        <label class="form-label">Select Cycle</label>

        <!-- Crucial: We use "cycle_id" and "cycle_name" strings here to match the DTO -->
        <select asp-for="cycle_id" class="form-control"
                asp-items="@(new SelectList(ViewBag.Cycles, "cycle_id", "cycle_name"))" required>
            <option value="">-- Select Cycle --</option>
        </select>
    </div>

    <!-- 2. Shift Dropdown -->
    <div class="mb-3">
        <label class="form-label">Select Shift to Add</label>

        <!-- Crucial: We use "shift_id" and "name" here to match ShiftDto -->
        <select asp-for="shift_id" class="form-control"
                asp-items="@(new SelectList(ViewBag.Shifts, "shift_id", "name"))" required>
            <option value="">-- Select Shift --</option>
        </select>
    </div>

    <!-- 3. Order Number -->
    <div class="mb-3">
        <label class="form-label">Order Number</label>
        <input asp-for="order_number" type="number" class="form-control" placeholder="e.g. 1" required />
        <small class="text-muted">1 = First shift in the rotation sequence.</small>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fa fa-link"></i> Link Shift
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>