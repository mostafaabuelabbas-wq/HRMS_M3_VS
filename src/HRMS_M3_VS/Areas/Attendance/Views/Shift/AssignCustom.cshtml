@model HRMS_M3_VS.Areas.Attendance.Models.AssignCustomDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="max-width: 700px;">

    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
            <i class="fa fa-star fa-2x"></i>
        </div>
        <div>
            <h2 class="fw-bold text-dark mb-1">Assign Custom Shift</h2>
            <p class="text-muted mb-0">Create and assign a one-off or special duty schedule</p>
        </div>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <!-- Gold Top Accent for "Special" Status -->
        <div style="height: 6px; background: linear-gradient(90deg, #ffc107 0%, #fd7e14 100%);"></div>

        <div class="card-body p-4 p-md-5 bg-white">
            <form method="post">

                <h6 class="text-uppercase text-muted fw-bold tracking-wide mb-4 small">
                    <i class="fa fa-pen-fancy me-2"></i>Custom Configuration
                </h6>

                <!-- Employee Dropdown -->
                <div class="mb-4">
                    <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">Employee</label>
                    <div class="input-group shadow-sm rounded-2 overflow-hidden">
                        <span class="input-group-text border-0 bg-light text-warning ps-3">
                            <i class="fa fa-user"></i>
                        </span>
                        <select asp-for="employee_id" class="form-select border-0 bg-light fw-bold py-3"
                                asp-items="@(new SelectList(ViewBag.Employees, "employee_id", "full_name"))" required>
                            <option value="">Select Employee...</option>
                        </select>
                    </div>
                </div>

                <!-- Shift Name -->
                <div class="mb-4">
                    <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">Custom Shift Name</label>
                    <div class="input-group shadow-sm rounded-2 overflow-hidden">
                        <span class="input-group-text border-0 bg-light text-warning ps-3">
                            <i class="fa fa-tag"></i>
                        </span>
                        <input asp-for="shift_name" class="form-control border-0 bg-light fw-bold py-3" placeholder="e.g. VIP Security Detail" required />
                    </div>
                </div>

                <hr class="my-4 opacity-10">

                <!-- Time Range -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">Start Time</label>
                        <div class="input-group shadow-sm rounded-2 overflow-hidden">
                            <span class="input-group-text border-0 bg-light text-warning ps-3">
                                <i class="fa fa-clock"></i>
                            </span>
                            <input asp-for="start_time" type="time" class="form-control border-0 bg-light fw-bold py-3" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">End Time</label>
                        <div class="input-group shadow-sm rounded-2 overflow-hidden">
                            <span class="input-group-text border-0 bg-light text-warning ps-3">
                                <i class="fa fa-history"></i>
                            </span>
                            <input asp-for="end_time" type="time" class="form-control border-0 bg-light fw-bold py-3" required />
                        </div>
                    </div>
                </div>

                <!-- Date Range -->
                <div class="row g-3 mb-5">
                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">Start Date</label>
                        <div class="input-group shadow-sm rounded-2 overflow-hidden">
                            <span class="input-group-text border-0 bg-light text-warning ps-3">
                                <i class="fa fa-calendar-plus"></i>
                            </span>
                            <input asp-for="start_date" type="date" class="form-control border-0 bg-light fw-bold py-3" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted fw-bold text-uppercase tracking-wide mb-1">End Date</label>
                        <div class="input-group shadow-sm rounded-2 overflow-hidden">
                            <span class="input-group-text border-0 bg-light text-warning ps-3">
                                <i class="fa fa-calendar-minus"></i>
                            </span>
                            <input asp-for="end_date" type="date" class="form-control border-0 bg-light fw-bold py-3" />
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex gap-3 pt-2">
                    <a asp-action="Index" class="btn btn-light btn-lg w-100 fw-bold text-muted border">Cancel</a>
                    <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold shadow-sm hover-lift btn-gradient text-white">
                        <i class="fa fa-bolt me-2"></i> Create & Assign
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    /* --- Typography --- */
    .tracking-wide {
        letter-spacing: 0.8px;
        font-size: 0.7rem;
    }

    /* --- Input Styling --- */
    .input-group:focus-within {
        box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.25) !important; /* Gold focus ring */
        border: 1px solid #ffc107;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: none;
        background-color: #fff !important;
    }

    .input-group-text {
        background-color: #fff3cd; /* Light yellow background for icons */
    }

    /* --- Button Gradient --- */
    .btn-gradient {
        background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        border: none;
    }

    /* --- Hover Effects --- */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 193, 7, 0.3) !important;
        }
</style>