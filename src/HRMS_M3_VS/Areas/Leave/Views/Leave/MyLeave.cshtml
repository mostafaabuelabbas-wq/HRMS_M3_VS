@model HRMS_M3_VS.Areas.Leave.Models.EmployeeLeaveViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Leave";

    // --- LOGIC EXTRACTION (Strict Categorization) ---
    // 1. Annual (Vacation)
    var annualLeave = Model.Balances.FirstOrDefault(b => b.category == "Annual");

    // 2. Entitled (Sick, Custom Entitled, etc.)
    var entitledLeaves = Model.Balances.Where(b => b.category == "Entitled").ToList();

    // 3. Policy (Probation, Holiday, Unlimited Policies)
    var policyLeaves = Model.Balances.Where(b => b.category == "Policy").ToList();
}

<div class="container-fluid py-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">My Leave Dashboard</h2>
            <p class="text-muted mb-0">Manage your leave requests and entitlement.</p>
        </div>
        <a href="/Leave/Leave/Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="fas fa-plus-circle me-2"></i>Apply for Leave
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm border-start border-success border-4 rounded-3 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm border-start border-danger border-4 rounded-3 mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
        </div>
    }

    <!-- SECTION 1: ANNUAL LEAVE BALANCE (Progress Bar) -->
    @if (annualLeave != null)
    {
        decimal progressPercent = annualLeave.entitlement > 0 
            ? (annualLeave.remaining_balance / annualLeave.entitlement) * 100 
            : 0;
            
        string progressColor = progressPercent < 20 ? "bg-danger" : (progressPercent < 50 ? "bg-warning" : "bg-success");

        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <!-- Main Balance Circle -->
                            <div class="col-md-3 text-center border-end">
                                <h6 class="text-uppercase text-secondary fw-bold small">Annual Balance</h6>
                                <h1 class="display-4 fw-bold text-dark mb-0">@annualLeave.remaining_balance.ToString("0.##")</h1>
                                <span class="badge bg-light text-dark border rounded-pill mt-2">Days Remaining</span>
                                @if (annualLeave.days_pending > 0)
                                {
                                    <div class="mt-2 text-warning fw-bold small">
                                        <i class="fas fa-clock"></i> @annualLeave.days_pending Pending
                                    </div>
                                }
                            </div>
                            
                            <!-- Progress -->
                            <div class="col-md-9 ps-md-5">
                                <div class="d-flex justify-content-between align-items-end mb-2">
                                    <div>
                                        <h5 class="fw-bold text-dark mb-1">@annualLeave.leave_type</h5>
                                        <p class="text-muted small mb-0">Standard Annual Entitlement</p>
                                    </div>
                                    <span class="fw-bold text-dark">
                                        @annualLeave.days_used.ToString("0.##") Used / @annualLeave.entitlement.ToString("0.##") Total
                                    </span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar @progressColor" role="progressbar" style="width: @progressPercent%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- SECTION 2: OTHER ENTITLED LEAVES (Sick, Custom Assigned, etc. - Separate Cards) -->
    @if (entitledLeaves.Any())
    {
        <h5 class="fw-bold text-dark mb-3">Other Entitled Leaves</h5>
        <div class="row g-4 mb-4">
            @foreach (var item in entitledLeaves)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 rounded-4">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="fw-bold text-dark mb-1">@item.leave_type</h6>
                                    <small class="text-muted">Separate Entitlement</small>
                                </div>
                                <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-circle">
                                    <i class="fas fa-notes-medical"></i>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-end">
                                <div>
                                    <h3 class="fw-bold text-dark mb-0">@item.remaining_balance.ToString("0.##")</h3>
                                    <small class="text-muted">Days Left</small>
                                </div>
                                <div class="text-end">
                                    <div class="small fw-bold">@item.days_used Used</div>
                                    <div class="small text-muted">of @item.entitlement</div>
                                    @if(item.days_pending > 0) {
                                        <span class="badge bg-warning text-dark mt-1">@item.days_pending Pending</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- SECTION 3: POLICY BASED LEAVES (Informational - No Balance) -->
    <h5 class="fw-bold text-dark mb-3">Policy Based Leaves</h5>
    <div class="row g-4 mb-5">
        @foreach (var item in policyLeaves)
        {
            <div class="col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-body p-4 d-flex align-items-center">
                        <div class="rounded-circle bg-info bg-opacity-10 text-info p-3 me-3">
                            <i class="fas fa-info-circle fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-1">@item.leave_type</h6>
                            <small class="text-muted">HR Controlled / No Balance</small>
                            @if(item.days_pending > 0) {
                                <div class="mt-1 badge bg-warning text-dark">@item.days_pending Pending</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- SECTION 4: REQUEST HISTORY -->
    <h5 class="fw-bold text-dark mb-3">Request History</h5>
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-secondary small fw-bold" style="letter-spacing: 0.5px;">
                            <th class="ps-4 py-3">Leave Type</th>
                            <th class="py-3">Reason / Details</th>
                            <th class="py-3">Duration</th>
                            <th class="py-3">Status</th>
                            <th class="py-3">Decision Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.History != null && Model.History.Any())
                        {
                            @foreach (var row in Model.History)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">@row.leave_type</td>
                                    <td class="text-muted text-truncate" style="max-width: 250px;">
                                        @row.justification
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@row.duration Day(s)</span>
                                    </td>
                                    <td>
                                        @if (row.status == "Pending") 
                                        { 
                                            <span class="badge bg-warning text-dark bg-opacity-25 rounded-pill px-3">Pending</span> 
                                        }
                                        else if (row.status.Contains("Approved") || row.status.Contains("Synced")) 
                                        { 
                                            <span class="badge bg-success text-success-emphasis bg-opacity-25 rounded-pill px-3">@row.status</span> 
                                        }
                                        else 
                                        { 
                                            <span class="badge bg-danger text-danger-emphasis bg-opacity-25 rounded-pill px-3">@row.status</span> 
                                        }
                                    </td>
                                    <td class="text-muted small fw-bold">
                                         @if (row.approval_timing.HasValue)
                                        {
                                            <span>@row.approval_timing.Value.ToString("yyyy-MM-dd")</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">No history found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>