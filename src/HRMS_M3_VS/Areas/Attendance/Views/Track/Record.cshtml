@model HRMS_M3_VS.Areas.Attendance.Models.RecordAttendanceDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Record Attendance";
}

<div class="container py-4 py-md-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <!-- Clean Professional Card -->
            <div class="card border-0 shadow rounded-4 overflow-hidden">

                <!-- Header with Dark Corporate Gradient -->
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);">
                    <div class="d-flex flex-column align-items-center">
                        <div class="bg-white bg-opacity-10 rounded-circle p-3 mb-3">
                            <i class="bi bi-clock-history fs-2"></i>
                        </div>
                        <h4 class="fw-semibold mb-1">Manual Attendance</h4>
                        <p class="mb-0 opacity-75 small">Log your shift timings accurately</p>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="employee_id" />

                        <!-- Shift Selection -->
                        <div class="mb-3">
                            <label asp-for="shift_id" class="form-label fw-medium text-muted small text-uppercase tracking-wider">Select Shift</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-calendar4-week text-dark"></i>
                                </span>
                                <select asp-for="shift_id" class="form-select border-start-0 ps-0"
                                        asp-items="@(new SelectList(ViewBag.Shifts, "shift_id", "name"))" required>
                                    <option value="">-- Select Shift --</option>
                                </select>
                            </div>
                        </div>

                        <!-- Time Inputs Row -->
                        <div class="row g-3 mb-3">
                            <!-- Clock In -->
                            <div class="col-6">
                                <label asp-for="entry_time" class="form-label fw-medium text-muted small text-uppercase tracking-wider">Clock In</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-success">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </span>
                                    <input asp-for="entry_time" type="time" class="form-control border-start-0 ps-0" required />
                                </div>
                            </div>

                            <!-- Clock Out -->
                            <div class="col-6">
                                <label asp-for="exit_time" class="form-label fw-medium text-muted small text-uppercase tracking-wider">Clock Out</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-danger">
                                        <i class="bi bi-box-arrow-right"></i>
                                    </span>
                                    <input asp-for="exit_time" type="time" class="form-control border-start-0 ps-0" required />
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">
                                <i class="bi bi-check-lg me-2"></i>Submit Record
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Custom Dark Theme Styles -->
<style>
    .tracking-wider {
        letter-spacing: 0.8px;
    }

    /* Focus States matching the dark theme */
    .form-control:focus,
    .form-select:focus {
        border-color: #2c5364;
        box-shadow: 0 0 0 0.2rem rgba(44, 83, 100, 0.25);
    }

    /* Primary Button matching the dark theme header */
    .btn-primary {
        background-color: #2c5364;
        border-color: #2c5364;
    }

        .btn-primary:hover {
            background-color: #203a43;
            border-color: #203a43;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}