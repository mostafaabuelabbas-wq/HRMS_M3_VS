@model IEnumerable<HRMS_M3_VS.Areas.Employee.Models.ContractDto>
@{
    ViewData["Title"] = "Contracts";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success bg-success bg-opacity-25 text-white border-0 shadow-sm rounded-3">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger bg-danger bg-opacity-25 text-white border-0 shadow-sm rounded-3">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white mb-0">
            <i class="fas fa-file-contract me-2 text-warning"></i>Contract Management
        </h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-lg fw-bold transition-btn">
            <i class="fas fa-plus me-2"></i>Create New Contract
        </a>
    </div>

    <div class="card shadow-lg border border-secondary rounded-4 overflow-hidden" style="background-color: #1E293B;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-white">
                    <thead class="text-secondary text-uppercase small" style="background-color: rgba(255,255,255,0.05); border-bottom: 1px solid #334155;">
                        <tr>
                            <th class="py-3 ps-4 border-0">ID</th>
                            <th class="py-3 border-0">Employee</th>
                            <th class="py-3 border-0">Type</th>
                            <th class="py-3 border-0">Start Date</th>
                            <th class="py-3 border-0">End Date</th>
                            <th class="py-3 text-center border-0">Status</th>
                            <th class="py-3 text-end pe-4 border-0">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            // LOGIC: Check if expiring in the next 30 days
                            bool isExpiring = c.EndDate.HasValue
                            && c.EndDate.Value <= DateTime.Today.AddDays(30)
                            && c.EndDate.Value >= DateTime.Today
                            && c.CurrentState == "Active";

                            <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
                                <td class="ps-4 fw-bold text-secondary border-0">#@c.ContractId</td>
                                <td class="fw-bold text-white border-0">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-warning bg-opacity-10 text-warning d-flex justify-content-center align-items-center me-3 fw-bold" 
                                             style="width: 35px; height: 35px;">
                                            <i class="fas fa-user small"></i>
                                        </div>
                                        @c.FullName
                                    </div>
                                </td>
                                <td class="text-secondary border-0">@c.Type</td>
                                <td class="text-secondary border-0">@(c.StartDate?.ToString("yyyy-MM-dd") ?? "-")</td>

                                <!-- Highlight End Date if critical -->
                                <td class="border-0 @(isExpiring ? "text-danger fw-bold" : "text-white")">
                                    @(c.EndDate?.ToString("yyyy-MM-dd") ?? "Ongoing")
                                </td>

                                <td class="text-center border-0">
                                    @if (isExpiring)
                                    {
                                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3 py-2 shadow-sm">Expiring Soon</span>
                                    }
                                    else if (c.CurrentState == "Active")
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 shadow-sm">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-3 py-2">Inactive</span>
                                    }
                                </td>

                                <td class="text-end pe-4 border-0">
                                    <div class="d-flex justify-content-end gap-2">

                                        <!-- 1. DETAILS (Always Visible) -->
                                        <a asp-action="Details" asp-route-id="@c.ContractId"
                                           class="btn btn-sm btn-outline-info rounded-pill px-3 shadow-sm visited-transition"
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (c.CurrentState != "Inactive")
                                        {
                                            // 2. EDIT (Always Visible for Active contracts - to fix mistakes)
                                            <a asp-action="Edit" asp-route-id="@c.ContractId"
                                               class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm visited-transition"
                                               title="Edit Contract Details">
                                                <i class="fas fa-pen"></i>
                                            </a>

                                            // 3. RENEW (Only Visible if Expiring Soon)
                                            @if (isExpiring)
                                            {
                                                <a asp-action="Renew" asp-route-id="@c.ContractId"
                                                   class="btn btn-sm btn-success rounded-pill px-3 shadow-sm fw-bold visited-transition"
                                                   title="Renew Contract">
                                                    <i class="fas fa-sync-alt me-1"></i> Renew
                                                </a>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>