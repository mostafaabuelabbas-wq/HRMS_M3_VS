@model HRMS_M3_VS.Areas.Employee.Models.ContractEditViewModel
@{
    ViewData["Title"] = "Edit Contract";
}

<h2>Edit Contract</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input asp-for="ContractId" type="hidden" />
    <div class="col-md-4">
        <label asp-for="Type" class="form-label">Type</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="CurrentState" class="form-label">State</label>
        <input asp-for="CurrentState" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-route-id="@Model.ContractId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
