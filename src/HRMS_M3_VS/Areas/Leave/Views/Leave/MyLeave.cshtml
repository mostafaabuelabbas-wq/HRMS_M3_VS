@model HRMS_M3_VS.Areas.Leave.Models.EmployeeLeaveViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Leave";

    // --- LOGIC EXTRACTION (FIXED) ---

    // 1. Identify "Banked" Leaves (Leaves where entitlement > 0)
    // We assume any leave with a positive entitlement is part of the "Annual Pool"
    // unless you have specific logic otherwise.
    var bankedLeaves = Model.Balances.Where(b => b.entitlement > 0).ToList();

    // 2. Calculate Totals dynamically
    decimal totalEntitlement = bankedLeaves.Sum(b => b.entitlement);
    decimal totalUsed = bankedLeaves.Sum(b => b.days_used);
    decimal totalRemaining = bankedLeaves.Sum(b => b.remaining_balance);

    // 3. Percentage for Progress Bar
    decimal progressPercent = totalEntitlement > 0 ? (totalRemaining / totalEntitlement) * 100 : 0;
    
    // 4. Color Logic (Red = Low Balance)
    string progressColor = progressPercent < 20 ? "bg-danger" : (progressPercent < 50 ? "bg-warning" : "bg-success");
}

<div class="container-fluid py-4">
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">My Leave Dashboard</h2>
            <p class="text-muted mb-0">Overview of your annual entitlement and usage.</p>
        </div>
        <a href="/Leave/Leave/Create" class="btn btn-primary shadow-sm rounded-pill px-4 fw-bold">
            <i class="fas fa-plus-circle me-2"></i> Apply for Leave
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm border-start border-danger border-4 rounded-3 mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm border-start border-success border-4 rounded-3 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }

    <!-- SECTION 1: ANNUAL ENTITLEMENT (DYNAMIC POOL) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <!-- Main Balance Circle -->
                        <div class="col-md-3 text-center border-end">
                            <h6 class="text-uppercase text-secondary fw-bold small">Total Balance</h6>
                            <h1 class="display-4 fw-bold text-dark mb-0">@totalRemaining.ToString("0.##")</h1>
                            <span class="badge bg-light text-dark border rounded-pill mt-2">Days Remaining</span>
                        </div>
                        
                        <!-- Progress & Breakdown -->
                        <div class="col-md-9 ps-md-5">
                            <div class="d-flex justify-content-between align-items-end mb-2">
                                <div>
                                    <h5 class="fw-bold text-dark mb-1">Annual Leave Pool</h5>
                                    <p class="text-muted small mb-0">Combined Balance (@totalEntitlement Days Total)</p>
                                </div>
                                <span class="fw-bold text-dark">@totalUsed.ToString("0.##") / @totalEntitlement Used</span>
                            </div>
                            
                            <!-- Main Progress Bar -->
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar @progressColor" role="progressbar" style="width: @progressPercent%"></div>
                            </div>

                            <!-- Usage Breakdown (Dynamic Loop) -->
                            <div class="row mt-4 g-3">
                                @foreach (var leaf in bankedLeaves)
                                {
                                    <div class="col-sm-6 col-lg-4">
                                        <div class="p-3 bg-light rounded-3 border d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-calendar-check text-primary me-2"></i>
                                                <span class="fw-bold text-secondary">@leaf.leave_type</span>
                                            </div>
                                            <div class="text-end">
                                                <div class="fw-bold text-dark">@leaf.remaining_balance Left</div>
                                                <small class="text-muted">of @leaf.entitlement</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!bankedLeaves.Any())
                                {
                                    <div class="col-12">
                                        <div class="alert alert-warning mb-0">
                                            <i class="fas fa-info-circle me-2"></i> No leave entitlements have been assigned to you yet. Please contact HR.
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SECTION 2: OTHER LEAVE TYPES (Policy Based / Unlimited) -->
    <h5 class="fw-bold text-dark mb-3">Policy Based Leaves</h5>
    <div class="row g-4 mb-5">
        @foreach (var item in Model.Balances.Where(b => b.entitlement == 0))
        {
            <div class="col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-body p-4 d-flex align-items-center">
                        <div class="rounded-circle bg-info bg-opacity-10 text-info p-3 me-3">
                            <i class="fas fa-info-circle fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-1">@item.leave_type</h6>
                            <small class="text-muted">Policy Based / HR Controlled</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- SECTION 3: REQUEST HISTORY -->
    <h5 class="fw-bold text-dark mb-3">Request History</h5>
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-secondary small fw-bold" style="letter-spacing: 0.5px;">
                            <th class="ps-4 py-3">Leave Type</th>
                            <th class="py-3">Reason / Details</th>
                            <th class="py-3">Duration</th>
                            <th class="py-3">Status</th>
                            <th class="py-3">Decision Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.History != null && Model.History.Any())
                        {
                            @foreach (var row in Model.History)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">@row.leave_type</td>
                                    <td class="text-muted text-truncate" style="max-width: 250px;">
                                        @row.justification
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@row.duration Day(s)</span>
                                    </td>
                                    <td>
                                        @if (row.status == "Pending") { <span class="badge bg-warning text-dark bg-opacity-25 rounded-pill px-3">Pending</span> }
                                        else if (row.status == "Approved") { <span class="badge bg-success text-success-emphasis bg-opacity-25 rounded-pill px-3">Approved</span> }
                                        else { <span class="badge bg-danger text-danger-emphasis bg-opacity-25 rounded-pill px-3">Rejected</span> }
                                    </td>
                                    <td class="text-muted small fw-bold">
                                        @(row.approval_timing?.ToString("yyyy-MM-dd") ?? "-")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">No history found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>