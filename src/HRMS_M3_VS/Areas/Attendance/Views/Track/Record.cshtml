@model HRMS_M3_VS.Areas.Attendance.Models.RecordAttendanceDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Record Attendance";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <!-- Digital Clock Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4 text-center text-white" 
                 style="background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);">
                <div class="card-body py-5">
                    <p class="mb-2 opacity-75 text-uppercase small letter-spacing-2">Current Server Time</p>
                    <h1 class="display-3 fw-bold mb-0" id="digitalClock">--:--:--</h1>
                    <p class="mt-2 text-warning small" id="dateDisplay">Loading date...</p>
                </div>
            </div>

            <!-- Action Buttons Grid -->
            <div class="row g-3">
                <!-- Clock In -->
                <div class="col-6">
                    <form asp-action="ClockIn" method="post" class="h-100">
                        <button type="submit" class="btn btn-success w-100 h-100 py-4 rounded-4 shadow-sm d-flex flex-column align-items-center justify-content-center hover-lift">
                            <i class="bi bi-box-arrow-in-right fs-1 mb-2"></i>
                            <span class="fw-bold fs-5">CLOCK IN</span>
                        </button>
                    </form>
                </div>

                <!-- Clock Out -->
                <div class="col-6">
                    <form asp-action="ClockOut" method="post" class="h-100">
                        <button type="submit" class="btn btn-danger w-100 h-100 py-4 rounded-4 shadow-sm d-flex flex-column align-items-center justify-content-center hover-lift">
                            <i class="bi bi-box-arrow-right fs-1 mb-2"></i>
                            <span class="fw-bold fs-5">CLOCK OUT</span>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Warning / Info -->
            <div class="alert alert-light border-0 shadow-sm rounded-4 mt-4 text-center">
                <i class="bi bi-info-circle-fill text-primary me-2"></i>
                <small class="text-muted">
                    Attendance is recorded based on strict server time. 
                    If you missed a punch, please use the <a asp-action="Correction" class="fw-bold text-decoration-none">Correction Request</a> form.
                </small>
            </div>

        </div>
    </div>
</div>

<style>
    .letter-spacing-2 { letter-spacing: 2px; }
    
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>

@section Scripts {
    <script>
        // 1. Digital Clock
        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { hour12: true });
            document.getElementById('digitalClock').innerText = timeString;
            const dateString = now.toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' });
            document.getElementById('dateDisplay').innerText = dateString;
        }
        setInterval(updateClock, 1000);
        updateClock();

        // 2. OFFLINE SYNC LOGIC
        const SYNC_URL = '/Attendance/Track/SyncOffline';
        const STORAGE_KEY = 'offline_punches';

        function saveOffline(type) {
            const punch = {
                Type: type,
                Timestamp: new Date().toISOString(),
                EmployeeId: 0 // Controller will overwrite with current user
            };

            let punches = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
            punches.push(punch);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(punches));

            // UI Feedback
            alert("⚠️ Internet is down! Saved locally. Will sync when online.");
            updateBadge();
        }

        async function syncData() {
            const punches = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
            if (punches.length === 0) return;

            try {
                const response = await fetch(SYNC_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(punches)
                });

                if (response.ok) {
                    localStorage.removeItem(STORAGE_KEY);
                    alert("✅ Online! Synced " + punches.length + " offline records.");
                    updateBadge();
                    window.location.reload(); // Refresh to show in history
                }
            } catch (err) {
                console.log("Still offline or server error", err);
            }
        }

        function updateBadge() {
             const punches = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
             const badge = document.getElementById('offlineBadge');
             if(punches.length > 0){
                 if(!badge) {
                    const alertDiv = document.createElement('div');
                    alertDiv.id = 'offlineBadge';
                    alertDiv.className = 'alert alert-warning fixed-bottom m-3 shadow-lg';
                    alertDiv.innerHTML = '<b>Pending Sync:</b> ' + punches.length + ' records';
                    document.body.appendChild(alertDiv);
                 } else {
                     badge.innerHTML = '<b>Pending Sync:</b> ' + punches.length + ' records';
                 }
             } else {
                 if(badge) badge.remove();
             }
        }

        // 3. Event Listeners
        window.addEventListener('online', syncData);
        window.addEventListener('load', () => {
             updateBadge();
             if(navigator.onLine) syncData();
        });

        // Intercept Forms
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!navigator.onLine) {
                    e.preventDefault();
                    // Determine type based on button text or action
                    const action = form.getAttribute('action'); // e.g. /Attendance/Track/ClockIn
                    const type = action.includes('ClockIn') ? 'ClockIn' : 'ClockOut';
                    saveOffline(type);
                }
            });
        });

    </script>
}