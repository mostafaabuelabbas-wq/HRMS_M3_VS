@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.LeaveRequestDetailDto>

@{
    ViewData["Title"] = "Manage Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-4">
        <div>
            <h1 class="h2 fw-bold text-dark mb-1">
                <i class="fas fa-tasks text-primary me-2"></i> Manage Leave Requests
            </h1>
            <p class="text-secondary mb-0">System-wide leave request audit and override controls.</p>
        </div>
        <div>
             <span class="badge bg-primary rounded-pill px-3 py-2 fs-6 shadow-sm">
                @Model.Count() Recent
            </span>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Employee</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Duration</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                            <th class="text-end pe-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="text-muted small fw-bold">#@item.request_id</span>
                                </td>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm fw-bold text-dark">@item.employee_name</h6>
                                            <p class="text-xs text-secondary mb-0">ID: @item.employee_id</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.leave_type</span>
                                </td>
                                <td>
                                    <span class="text-secondary text-xs font-weight-bold">@item.duration Days</span>
                                </td>
                                <td>
                                    @if (item.status == "Approved")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Approved</span>
                                    }
                                    else if (item.status.Contains("Override"))
                                    {
                                         <span class="badge bg-warning bg-opacity-10 text-warning">@item.status</span>
                                    }
                                    else if (item.status == "Rejected")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary">@item.status</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/Leave/Leave/OverrideDecision/@item.request_id" class="btn btn-sm btn-outline-danger shadow-none rounded-pill px-3 py-1" style="font-size: 0.75rem;">
                                        <i class="fas fa-gavel me-1"></i> Override
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
