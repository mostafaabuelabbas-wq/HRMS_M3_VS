@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.LeaveDocumentDto>

@{
    ViewData["Title"] = "View Attachments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a href="@Url.Action("MyLeave")" class="btn btn-outline-secondary btn-sm rounded-circle me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h3 class="fw-bold text-dark mb-0">Leave Request Attachments</h3>
                    <p class="text-muted mb-0 small">Request ID: #@ViewBag.RequestId</p>
                </div>
            </div>

            <!-- Attachments List -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-0">

                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var doc in Model)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center py-3 px-4">
                                    <div class="d-flex align-items-center">
                                        <!-- File Icon -->
                                        <div class="me-3">
                                            @{
                                                var ext = System.IO.Path.GetExtension(doc.FilePath).ToLower();
                                                var iconClass = ext switch
                                                {
                                                    ".pdf" => "fa-file-pdf text-danger",
                                                    ".jpg" or ".jpeg" or ".png" => "fa-file-image text-primary",
                                                    ".doc" or ".docx" => "fa-file-word text-info",
                                                    _ => "fa-file text-secondary"
                                                };
                                            }
                                            <i class="fas @iconClass fa-2x"></i>
                                        </div>

                                        <!-- File Details -->
                                        <div>
                                            <h6 class="mb-1 fw-bold text-dark">@doc.FileName</h6>
                                            <small class="text-muted">
                                                Uploaded on @doc.UploadedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Download Button -->
                                    <div>
                                        <a href="@Url.Action("DownloadAttachment", new { filePath = doc.FilePath })"
                                           class="btn btn-primary btn-sm rounded-pill px-3">
                                            <i class="fas fa-download me-2"></i>Download
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No attachments found for this request.</p>
                        </div>
                    }

                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <a href="@Url.Action("MyLeave")" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to My Leave
                </a>
            </div>

        </div>
    </div>
</div>
