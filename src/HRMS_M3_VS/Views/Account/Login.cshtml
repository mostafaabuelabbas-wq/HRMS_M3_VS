@model HRMS_M3_VS.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HRMS</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <!-- Main UI Theme (Pitch Black & Blue) -->
    <link href="~/css/ui/app-ui.css" rel="stylesheet" />

    <style>
        /* Specific overrides for Login Page centering */
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            background-color: var(--bg-body); /* Inherit Black */
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            /* Card style inherited from app-ui.css .card, but we ensure z-index */
            position: relative;
            z-index: 10;
        }

        /* Input Group tweaks to match theme */
        .input-group-text {
            background-color: var(--bg-input);
            border-color: var(--border);
            color: var(--text-muted);
        }
        
        .form-control {
            border-left: none; /* Seamless look with icon */
        }

        /* Floating Shapes for decoration */
        .bg-shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            z-index: 1;
            opacity: 0.3;
        }
        .shape-1 {
            width: 300px; 
            height: 300px;
            background: var(--primary);
            top: -50px; left: -50px;
        }
        .shape-2 {
            width: 400px; 
            height: 400px;
            background: var(--primary-hover);
            bottom: -100px; right: -100px;
        }
    </style>
</head>
<body>

    <!-- Background Decoration -->
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>

    <div class="card login-card shadow-lg p-4 p-md-5 border-0">
        <div class="card-body p-0">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="brand-text display-4 mb-2">
                    <i class="fas fa-cube text-primary me-2"></i>HR<span class="text-primary">MS</span>
                </div>
                <p class="text-muted small">Welcome back! Please access your account.</p>
            </div>

            <!-- Error Message -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center p-2 mb-4 small rounded" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>@TempData["Error"]</div>
                </div>
            }

            <!-- Form -->
            <form asp-action="Login" method="post">
                
                <!-- Email -->
                <div class="mb-4">
                    <label class="form-label small text-uppercase text-muted fw-bold" style="letter-spacing: 0.1em;">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text border-end-0"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="name@company.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Password -->
                <div class="mb-5">
                    <label class="form-label small text-uppercase text-muted fw-bold" style="letter-spacing: 0.1em;">Password</label>
                    <div class="input-group">
                        <span class="input-group-text border-end-0"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="Enter password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary py-2 fw-bold">
                        Sign In
                    </button>
                </div>

            </form>

            <!-- Footer -->
            <div class="text-center mt-5 pt-3 border-top border-secondary border-opacity-10">
                <small class="text-muted">© 2025 HR Management System</small>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>