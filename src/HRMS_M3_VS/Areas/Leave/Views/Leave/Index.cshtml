@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.PendingLeaveRequestDto>
@{
    ViewData["Title"] = "Leave Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-1 text-gray-800 fw-bold">
                <i class="fas fa-inbox me-2 text-primary"></i>Inbox
            </h2>
            <p class="text-muted mb-0">You have <strong>@Model.Count()</strong> pending requests to review.</p>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm border-start border-success border-4 rounded-3">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm border-start border-danger border-4 rounded-3">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Content -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm text-center py-5 rounded-3">
            <div class="card-body">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                    <i class="fas fa-check-double fa-3x text-muted opacity-50"></i>
                </div>
                <h5 class="fw-bold text-dark">All caught up!</h5>
                <p class="text-muted">No pending leave requests at the moment.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                // Initials Logic
                string initials = string.IsNullOrEmpty(item.EmployeeName) ? "?" : item.EmployeeName.Substring(0, 1).ToUpper();
                string[] colors = { "bg-primary", "bg-success", "bg-warning", "bg-info", "bg-danger", "bg-secondary" };
                string avatarColor = colors[item.EmployeeId % colors.Length];

                <div class="col-md-6 col-xl-4">
                    <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-3">
                        <div class="card-body">

                            <!-- User Info -->
                            <div class="d-flex align-items-center mb-3">
                                <div class="@avatarColor text-white rounded-circle d-flex justify-content-center align-items-center me-3 shadow-sm"
                                     style="width: 50px; height: 50px; font-size: 1.2rem; font-weight: bold;">
                                    @initials
                                </div>
                                <div>
                                    <h6 class="fw-bold text-dark mb-0">@(item.EmployeeName ?? "Unknown")</h6>
                                    <span class="badge bg-light text-dark border">@item.LeaveType</span>
                                </div>
                                <div class="ms-auto">
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill shadow-sm">Pending</span>
                                    }
                                    else if (item.Status == "Approved" || item.Status?.Contains("Approved") == true)
                                    {
                                        <span class="badge bg-success text-white rounded-pill shadow-sm">
                                            @item.Status
                                        </span>
                                    }
                                    else if (item.Status == "Rejected" || item.Status?.Contains("Rejected") == true)
                                    {
                                        <span class="badge bg-danger text-white rounded-pill shadow-sm">
                                            @item.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-white rounded-pill shadow-sm">
                                            @item.Status
                                        </span>
                                    }
                                 
                                </div>
                            </div>

                            <!-- Details -->
                            <div class="bg-light p-3 rounded-3 mb-3 border border-light">
                                <div class="d-flex justify-content-between align-items-center text-center">
                                    <div>
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.7rem;">Duration</small>
                                        <span class="fw-bold text-dark fs-5">@item.Duration</span> <small>Days</small>
                                    </div>
                                    <div class="vr mx-2"></div>
                                    <div class="text-start w-50">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.7rem;">Details</small>
                                        <span class="text-secondary small fst-italic text-truncate d-block" title="@item.Justification">
                                            "@(string.IsNullOrEmpty(item.Justification) ? "No reason" : item.Justification)"
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid gap-2 d-flex">

                                <!-- ? MANAGER ONLY: Approve, Reject, Flag -->
                                @if (User.IsInRole("Manager"))
                                {
                                    <!-- APPROVE -->
                                    <form action="/Leave/Leave/Approve" method="post" class="flex-grow-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.RequestId" />
                                        <button type="submit" class="btn btn-success w-100 fw-bold shadow-sm">
                                            <i class="fas fa-check me-2"></i> Approve
                                        </button>
                                    </form>

                                    <!-- REJECT -->
                                    <button type="button" class="btn btn-outline-danger fw-bold shadow-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#rejectModal-@item.RequestId">
                                        <i class="fas fa-times"></i>
                                    </button>

                                    <!-- FLAG -->
                                    <button type="button" class="btn btn-outline-warning fw-bold shadow-sm text-dark"
                                            data-bs-toggle="modal"
                                            data-bs-target="#flagModal-@item.RequestId">
                                        <i class="fas fa-flag"></i>
                                    </button>
                                }

                                <!-- ? HR ADMIN ONLY: Override -->
                                @if (User.IsInRole("HRAdmin"))
                                {
                                    <a href="@Url.Action("OverrideDecision", "Leave", new { area = "Leave", id = item.RequestId })"
                                       class="btn btn-outline-danger fw-bold shadow-sm w-100">
                                        <i class="fas fa-gavel me-1"></i> Override
                                    </a>
                                }

                            </div>

                        </div>
                    </div>
                </div>

                <!-- REJECT MODAL -->
                <div class="modal fade" id="rejectModal-@item.RequestId" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header border-0 pb-0">
                                <h5 class="modal-title fw-bold text-danger">Reject Request?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p class="text-muted small">Confirm rejection for <strong>@item.EmployeeName</strong>.</p>
                                
                                <form action="/Leave/Leave/Reject" method="post">
                                    <!-- SECURITY TOKEN FIX -->
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.RequestId" />
                                    <textarea name="reason" class="form-control bg-light mb-3" rows="3" required placeholder="Reason for rejection..."></textarea>
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Confirm Reject</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FLAG MODAL -->
                <div class="modal fade" id="flagModal-@item.RequestId" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header border-0 pb-0">
                                <h5 class="modal-title fw-bold text-warning">Flag Pattern</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p class="text-muted small">Alert HR about irregular behavior.</p>
                                
                                <form action="/Leave/Leave/Flag" method="post">
                                    <!-- SECURITY TOKEN FIX -->
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                                    <textarea name="reason" class="form-control bg-light mb-3" rows="3" required placeholder="Describe the pattern..."></textarea>
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-warning">Flag to HR</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
</style>