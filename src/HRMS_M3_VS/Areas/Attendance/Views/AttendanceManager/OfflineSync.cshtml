@model HRMS_M3_VS.Areas.Attendance.Models.OfflineSyncDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">

    <div class="card border-secondary shadow-lg overflow-hidden" style="width: 100%; max-width: 450px;">

        <!-- Colorful Top Accent Line -->
        <div style="height: 4px; background: linear-gradient(90deg, #0d6efd 0%, #6610f2 50%, #fd7e14 100%);"></div>

        <div class="card-header border-bottom border-secondary py-3 px-4 bg-transparent">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="fa fa-wifi fa-lg"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold text-white">Offline Sync</h5>
                    <small class="text-muted">Push offline biometric records</small>
                </div>
            </div>
        </div>

        <div class="card-body p-4">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success d-flex align-items-center small mb-3 rounded-2">
                    <i class="fa fa-check-circle me-2"></i>
                    <div class="flex-grow-1 fw-medium">@TempData["Success"]</div>
                    <button type="button" class="btn-close btn-close-white small ms-2" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post">

                <!-- Employee Dropdown -->
                <div class="mb-3">
                    <label class="form-label text-uppercase text-muted small fw-bold">Employee</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-primary ps-3">
                            <i class="fa fa-user"></i>
                        </span>
                        <select asp-for="employee_id" class="form-select border-secondary text-white"
                                asp-items="@(new SelectList(ViewBag.Employees, "employee_id", "full_name"))" required>
                            <option value="">Select Employee...</option>
                        </select>
                    </div>
                </div>

                <!-- Device & Time -->
                <div class="row g-3 mb-4">
                    <div class="col-5">
                        <label class="form-label text-uppercase text-muted small fw-bold">Device ID</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-warning ps-3">
                                <i class="fa fa-desktop"></i>
                            </span>
                            <input asp-for="device_id" type="number" class="form-control border-secondary text-white" placeholder="101" required />
                        </div>
                    </div>
                    <div class="col-7">
                        <label class="form-label text-uppercase text-muted small fw-bold">Time</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-info ps-3">
                                <i class="fa fa-clock"></i>
                            </span>
                            <input asp-for="clock_time" type="datetime-local" class="form-control border-secondary text-white px-2"
                                   asp-format="{0:yyyy-MM-ddTHH:mm}" required />
                        </div>
                    </div>
                </div>

                <!-- Punch Type Toggle -->
                <div class="mb-4">
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="type" id="opt_in" value="IN" checked>
                        <label class="btn btn-outline-success fw-bold py-2" for="opt_in">
                            <i class="fa fa-sign-in-alt me-1"></i> Check IN
                        </label>

                        <input type="radio" class="btn-check" name="type" id="opt_out" value="OUT">
                        <label class="btn btn-outline-danger fw-bold py-2" for="opt_out">
                            Check OUT <i class="fa fa-sign-out-alt ms-1"></i>
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 fw-bold py-2 shadow-sm">
                    Sync Record
                </button>

            </form>
        </div>
    </div>
</div>