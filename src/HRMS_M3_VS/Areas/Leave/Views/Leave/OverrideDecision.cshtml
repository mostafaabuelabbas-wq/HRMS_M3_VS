@model HRMS_M3_VS.Areas.Leave.Models.LeaveRequestDetailDto

@{
    ViewData["Title"] = "Override Leave Decision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border border-subtle shadow-lg rounded-4 overflow-hidden" style="background-color: var(--bg-surface);">
                <!-- Header -->
                <div class="card-header bg-danger text-white p-4 text-center border-0">
                    <div class="mb-3">
                        <div class="d-inline-flex bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-gavel fs-2 text-white"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-0">Override Decision</h5>
                    <p class="mb-0 text-white-50 small">HR Admin Protocol</p>
                </div>

                <div class="card-body p-4 p-md-5">

                    <!-- Alerts -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger border-0 shadow-sm rounded-3 d-flex align-items-center mb-4">
                            <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
                            <div>@TempData["Error"]</div>
                        </div>
                    }

                    <!-- READ-ONLY DETAILS -->
                    <div class="rounded-3 border border-subtle p-4 mb-4" style="background-color: var(--bg-body);">
                        <div class="mb-3 border-bottom border-secondary border-opacity-25 pb-3">
                            <small class="d-block text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Employee</small>
                            <div class="fw-bold text-white fs-5">@Model.employee_name</div>
                        </div>
                        <div class="row mb-3 border-bottom border-secondary border-opacity-25 pb-3">
                            <div class="col-6">
                                <small class="d-block text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Leave Type</small>
                                <div class="fw-bold text-white">
                                    @Model.leave_type 
                                    <span class="badge bg-secondary ms-2 border border-secondary text-white">@Model.duration Day(s)</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <small class="d-block text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Current Status</small>
                                <div>
                                    @if(Model.status.Contains("Approved")) { <span class="badge bg-success bg-opacity-25 text-success border border-success">@Model.status</span>; }
                                    else if(Model.status.Contains("Rejected")) { <span class="badge bg-danger bg-opacity-25 text-danger border border-danger">@Model.status</span>; }
                                    else { <span class="badge bg-secondary">@Model.status</span>; }
                                </div>
                            </div>
                        </div>
                        <div>
                            <small class="d-block text-uppercase text-muted fw-bold mb-1" style="font-size: 0.7rem;">Justification / Dates</small>
                            <div class="text-white-50 small fst-italic">"@Model.justification"</div>
                        </div>
                    </div>

                    <!-- FORM -->
                    <form action="/Leave/Leave/OverrideDecision" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.request_id" />

                        <div class="alert alert-warning bg-warning bg-opacity-10 border border-warning text-warning d-flex gap-3 align-items-center mb-4">
                            <i class="fas fa-exclamation-triangle fs-4"></i>
                            <div class="small">
                                <strong>Warning:</strong> Overriding this decision will update the status, notify the employee, and sync attendance if approved.
                            </div>
                        </div>

                        <!-- 1. New Status -->
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">New Status</label>
                            <select name="status" class="form-select border-subtle text-white" style="background-color: var(--bg-body);" required>
                                <option value="" class="text-muted">Select Action...</option>
                                <option value="Approved">Approve (Override)</option>
                                <option value="Rejected">Reject (Override)</option>
                            </select>
                        </div>

                        <!-- 2. Reason -->
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Override Reason (Mandatory)</label>
                            <textarea name="reason" class="form-control border-subtle text-white" style="background-color: var(--bg-body);" rows="3" placeholder="Explain why you are overriding this decision..." required></textarea>
                        </div>

                        <hr class="my-4 border-secondary border-opacity-25" />

                        <!-- Actions -->
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-lg">
                                <i class="fas fa-gavel me-2"></i> Confirm Override
                            </button>
                            <a href="/Leave/Leave/ManageRequests" class="btn btn-link text-muted text-decoration-none text-center">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>