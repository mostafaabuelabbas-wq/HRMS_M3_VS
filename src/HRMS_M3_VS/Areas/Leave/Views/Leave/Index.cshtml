@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.PendingLeaveRequestDto>
@{
    ViewData["Title"] = "Leave Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-4">
        <div>
            <h1 class="h2 fw-bold text-dark mb-1">Inbox</h1>
            <p class="text-secondary mb-0">Manage pending leave requests from your team.</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-dark rounded-pill px-3 py-2 fs-6">
                @Model.Count() Pending
            </span>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 border-start border-success border-4 shadow-sm mb-4 bg-white">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4 text-success"></i>
                <div>@TempData["Success"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 border-start border-danger border-4 shadow-sm mb-4 bg-white">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-3 fs-4 text-danger"></i>
                <div>@TempData["Error"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Content -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-inbox fa-3x text-light-gray opacity-25"></i>
            </div>
            <h4 class="text-secondary fw-normal">All caught up</h4>
            <p class="text-muted small">No pending requests at this time.</p>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="py-3 ps-4 text-uppercase text-secondary text-xs fw-bold border-0" style="width: 25%;">Employee</th>
                            <th class="py-3 text-uppercase text-secondary text-xs fw-bold border-0" style="width: 15%;">Type</th>
                            <th class="py-3 text-uppercase text-secondary text-xs fw-bold border-0" style="width: 25%;">Details</th>
                            <th class="py-3 text-uppercase text-secondary text-xs fw-bold border-0" style="width: 10%;">Duration</th>
                            <th class="py-3 text-center text-uppercase text-secondary text-xs fw-bold border-0" style="width: 25%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Initials Logic
                            string initials = string.IsNullOrEmpty(item.EmployeeName) ? "?" : item.EmployeeName.Substring(0, 1).ToUpper();
                            // Minimalist Avatar Colors (Pastels/Grayscale)
                            string[] colors = { "bg-dark text-white", "bg-secondary text-white", "bg-secondary bg-opacity-75 text-white" }; 
                            string avatarColor = colors[item.EmployeeId % colors.Length];
                            
                            // Category Badge Logic
                            string badgeClass = item.LeaveType.ToLower().Contains("vacation") ? "bg-dark text-white" : 
                                              item.LeaveType.ToLower().Contains("sick") ? "bg-danger bg-opacity-10 text-danger" : 
                                              "bg-secondary bg-opacity-10 text-dark";

                            <tr class="border-bottom border-light">
                                <!-- Employee Column -->
                                <td class="ps-4 py-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle d-flex justify-content-center align-items-center me-3 shadow-sm @avatarColor" 
                                             style="width: 40px; height: 40px; font-weight: 600; font-size: 0.9rem;">
                                            @initials
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@(item.EmployeeName ?? "Unknown")</div>
                                            <div class="small text-muted" style="font-size: 0.75rem;">ID: @item.EmployeeId</div>
                                        </div>
                                    </div>
                                </td>

                                <!-- Type Column -->
                                <td>
                                    <span class="badge rounded-pill fw-normal px-3 py-2 border @badgeClass">
                                        @item.LeaveType
                                    </span>
                                </td>

                                <!-- Details Column -->
                                <td>
                                    <div class="d-flex flex-column">
                                        @if (!string.IsNullOrEmpty(item.Justification))
                                        {
                                            <span class="text-dark small mb-1 text-truncate" style="max-width: 250px;" title="@item.Justification">
                                                @item.Justification
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small fst-italic">No details provided</span>
                                        }
                                        
                                        @if (!string.IsNullOrEmpty(item.AttachmentPath))
                                        {
                                            <a href="@item.AttachmentPath" target="_blank" class="text-primary text-decoration-none small fw-bold mt-1">
                                                <i class="fas fa-paperclip me-1"></i> View Attachment
                                            </a>
                                        }
                                    </div>
                                </td>

                                <!-- Duration Column -->
                                <td>
                                    <div class="fw-bold text-dark h5 mb-0">@item.Duration</div>
                                    <div class="small text-muted text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Days</div>
                                </td>

                                <!-- Actions Column -->
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        
                                        @if (User.IsInRole("Manager"))
                                        {
                                            <!-- APPROVE -->
                                            <form action="/Leave/Leave/Approve" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.RequestId" />
                                                <button type="submit" class="btn btn-outline-success btn-sm rounded-circle shadow-sm" style="width: 38px; height: 38px;" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>

                                            <!-- REJECT (Modal Trigger) -->
                                            <button type="button" class="btn btn-outline-danger btn-sm rounded-circle shadow-sm hover-scale" 
                                                    style="width: 38px; height: 38px;" 
                                                    data-bs-toggle="modal" data-bs-target="#rejectModal-@item.RequestId" title="Reject">
                                                <i class="fas fa-times"></i>
                                            </button>

                                            <!-- FLAG (Modal Trigger) -->
                                            <button type="button" class="btn btn-outline-warning btn-sm rounded-circle shadow-sm hover-scale text-dark border-warning" 
                                                    style="width: 38px; height: 38px;" 
                                                    data-bs-toggle="modal" data-bs-target="#flagModal-@item.RequestId" title="Flag Irregularity">
                                                <i class="fas fa-flag"></i>
                                            </button>
                                        }

                                        @if (User.IsInRole("HRAdmin"))
                                        {
                                            <!-- OVERRIDE BUTTON -->
                                            <a href="@Url.Action("OverrideDecision", "Leave", new { area = "Leave", id = item.RequestId })" 
                                               class="btn btn-outline-danger btn-sm shadow-sm px-3 fw-bold rounded-pill" 
                                               title="Override Decision">
                                                <i class="fas fa-gavel me-1"></i> Override
                                            </a>
                                        }

                                    </div>

                                    <!-- MODALS -->
                                    <!-- Reject Modal -->
                                    <div class="modal fade text-start" id="rejectModal-@item.RequestId" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content border-0 shadow-lg rounded-4">
                                                <div class="modal-header border-0 pb-0">
                                                    <h6 class="modal-title fw-bold text-danger">Reject Request</h6>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="text-muted small mb-3">Please provide a reason for rejecting <strong>@item.EmployeeName</strong>'s request.</p>
                                                    <form action="/Leave/Leave/Reject" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.RequestId" />
                                                        <textarea name="reason" class="form-control bg-light border-0 mb-3 rounded-3" rows="3" required placeholder="Reason..."></textarea>
                                                        <div class="d-flex justify-content-end gap-2">
                                                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger rounded-pill px-4">Reject</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Flag Modal -->
                                    <div class="modal fade text-start" id="flagModal-@item.RequestId" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content border-0 shadow-lg rounded-4">
                                                <div class="modal-header border-0 pb-0">
                                                    <h6 class="modal-title fw-bold text-warning">Flag Pattern</h6>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="text-muted small mb-3">Alert HR about irregular behavior for <strong>@item.EmployeeName</strong>.</p>
                                                    <form action="/Leave/Leave/Flag" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                                                        <textarea name="reason" class="form-control bg-light border-0 mb-3 rounded-3" rows="3" required placeholder="Describe the pattern..."></textarea>
                                                        <div class="d-flex justify-content-end gap-2">
                                                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-warning rounded-pill px-4 text-dark">Flag</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    /* Custom Typography */
    .text-xs { font-size: 0.75rem; letter-spacing: 0.5px; }
    
    /* Table Styling */
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.015);
    }
    
    /* Smooth Transitions */
    .btn { transition: all 0.2s ease; }
    .btn:hover { transform: translateY(-1px); }

    /* Custom Scrollbar for Table (Subtle) */
    .table-responsive::-webkit-scrollbar {
        height: 6px;
    }
    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #e9ecef;
        border-radius: 4px;
    }
</style>