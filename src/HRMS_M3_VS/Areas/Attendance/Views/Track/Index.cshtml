@model IEnumerable<HRMS_M3_VS.Areas.Attendance.Models.AttendanceLogDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Attendance History</h2>
    <div>
        <a class="btn btn-primary" asp-action="Record">
            <i class="fa fa-clock"></i> Record Attendance
        </a>

        <!-- NEW BUTTON -->
        <a class="btn btn-outline-warning ms-2" asp-action="Correction">
            <i class="fa fa-tools"></i> Fix Issue
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>Shift</th>
            <th>In</th>
            <th>Out</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@(log.entry_time?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@log.shift_name</td>
                <td class="text-success">@(log.entry_time?.ToString("HH:mm") ?? "-")</td>
                <td class="text-danger">@(log.exit_time?.ToString("HH:mm") ?? "-")</td>
                <td>@log.duration</td>
            </tr>
        }
    </tbody>
</table>