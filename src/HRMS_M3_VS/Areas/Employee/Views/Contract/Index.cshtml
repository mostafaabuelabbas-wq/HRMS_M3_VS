@model IEnumerable<HRMS_M3_VS.Areas.Employee.Models.ContractDto>
@{
    ViewData["Title"] = "Contracts";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Contract Management</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-2"></i>Create New Contract
        </a>
    </div>

    <div class="card shadow border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-4">ID</th>
                        <th class="py-3">Employee</th>
                        <th class="py-3">Type</th>
                        <th class="py-3">Start Date</th>
                        <th class="py-3">End Date</th>
                        <th class="py-3 text-center">Status</th>
                        <th class="py-3 text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        // LOGIC: Check if expiring in the next 30 days
                        bool isExpiring = c.EndDate.HasValue
                        && c.EndDate.Value <= DateTime.Today.AddDays(30)
                        && c.EndDate.Value >= DateTime.Today
                        && c.CurrentState == "Active";

                        <tr>
                            <td class="ps-4 fw-bold">#@c.ContractId</td>
                            <td class="text-primary fw-semibold">@c.FullName</td>
                            <td>@c.Type</td>
                            <td>@(c.StartDate?.ToString("yyyy-MM-dd") ?? "-")</td>

                            <!-- Highlight End Date if critical -->
                            <td class="@(isExpiring ? "text-danger fw-bold" : "")">
                                @(c.EndDate?.ToString("yyyy-MM-dd") ?? "Ongoing")
                            </td>

                            <td class="text-center">
                                @if (isExpiring)
                                {
                                    <span class="badge bg-warning text-dark shadow-sm">Expiring Soon</span>
                                }
                                else if (c.CurrentState == "Active")
                                {
                                    <span class="badge bg-success shadow-sm">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">

                                    <!-- 1. DETAILS (Always Visible) -->
                                    <a asp-action="Details" asp-route-id="@c.ContractId"
                                       class="btn btn-sm btn-info text-white shadow-sm"
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @if (c.CurrentState != "Inactive")
                                    {
                                        // 2. EDIT (Always Visible for Active contracts - to fix mistakes)
                                        <a asp-action="Edit" asp-route-id="@c.ContractId"
                                           class="btn btn-sm btn-primary shadow-sm"
                                           title="Edit Contract Details">
                                            <i class="fas fa-pen"></i> Edit
                                        </a>

                                        // 3. RENEW (Only Visible if Expiring Soon)
                                        // This is the "Smart" part. Only show Renew if it's actually needed.
                                        @if (isExpiring)
                                        {
                                            <a asp-action="Renew" asp-route-id="@c.ContractId"
                                               class="btn btn-sm btn-success shadow-sm fw-bold"
                                               title="Renew Contract">
                                                <i class="fas fa-sync-alt me-1"></i> Renew
                                            </a>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>