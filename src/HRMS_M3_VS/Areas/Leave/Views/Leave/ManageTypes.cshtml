@model IEnumerable<HRMS_M3_VS.Areas.Leave.Models.LeaveConfigDto>

@{
    ViewData["Title"] = "Leave Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Leave Policies</h2>
            <p class="text-muted mb-0">Configure leave types, rules, and eligibility.</p>
        </div>
        <!-- FIX: Direct Link -->
        <a href="/Leave/Leave/EditType" class="btn btn-primary shadow-sm rounded-pill px-4 fw-bold">
            <i class="fas fa-plus me-2"></i> Create New Policy
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm border-start border-success border-4 rounded-3 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm border-start border-danger border-4 rounded-3 mb-4">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
        </div>
    }

    <!-- Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-0">
            <h5 class="fw-bold text-dark mb-0">Existing Policies</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-secondary small fw-bold" style="letter-spacing: 0.5px;">
                            <th class="ps-4 py-3">Leave Type</th>
                            <th class="py-3">Description</th>
                            <th class="py-3">Rules</th>
                            <th class="py-3">Eligibility</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">
                                        <span class="badge bg-light text-primary border border-primary-subtle px-2 py-1">
                                            @item.leave_type
                                        </span>
                                    </td>
                                    <td class="text-muted text-truncate" style="max-width: 250px;">
                                        @item.leave_description
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span class="text-dark fw-bold">@item.notice_period days notice</span>
                                            <span class="text-muted">Max @item.max_duration days</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill">
                                            @item.eligibility_rules
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <!-- FIX: Direct Link passing ID parameter -->
                                        <a href="/Leave/Leave/EditType?id=@item.leave_type" class="btn btn-sm btn-outline-primary fw-bold">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    No policies found. Click "Create New Policy" to start.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>