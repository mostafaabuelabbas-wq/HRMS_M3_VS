@model IEnumerable<HRMS_M3_VS.Areas.Attendance.Models.LeaveSyncDto>

@{
    ViewData["Title"] = "Sync Leaves";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="fa fa-sync-alt me-2"></i>Sync Leaves to Attendance
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Error Message -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-muted">Approved Leaves Pending Sync</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Req ID</th>
                        <th>Employee</th>
                        <th>Leave Type</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fa fa-clipboard-check fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">No approved leaves found.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.request_id</td>
                                <td class="fw-bold">@item.employee_name</td>
                                <td><span class="badge bg-info text-dark">@item.leave_type</span></td>
                                <td>
                                    @item.start_date.ToString("MMM dd") - @item.end_date.ToString("MMM dd")
                                </td>
                                <td><span class="badge bg-success">@item.status</span></td>
                                <td class="text-end">
                                    <form asp-action="SyncLeaves" method="post">
                                        <input type="hidden" name="id" value="@item.request_id" />
                                        <button type="submit" class="btn btn-warning btn-sm fw-bold">
                                            <i class="fa fa-exchange-alt me-1"></i> Sync
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>