@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #F8FAFC;
            font-family: 'Segoe UI', sans-serif;
        }

        /* ------------------------------
                    SIDEBAR (Merged Styles)
                   ------------------------------ */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 260px;
            height: 100vh;
            background-color: #1E293B;
            color: white;
            border-right: 1px solid #0F172A;
            box-shadow: 3px 0 8px rgba(0,0,0,0.15);
            /* Flexbox to push Logout to bottom */
            display: flex;
            flex-direction: column;
        }

            /* This makes the nav scrollable and takes available space */
            .sidebar .nav {
                flex-grow: 1;
                overflow-y: auto;
                padding-top: 10px;
            }

        /* Sidebar header */
        .sidebar-header {
            padding: 20px;
            text-align: left;
            font-size: 22px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 1px;
        }

            .sidebar-header span {
                color: #3B82F6; /* blue accent */
            }

        /* Nav styling */
        .sidebar .nav-link {
            color: #CBD5E1;
            padding: 12px 20px;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 12px;
            border-radius: 6px;
            transition: 0.2s ease;
        }

            .sidebar .nav-link i {
                width: 22px;
                text-align: center;
                font-size: 17px;
            }

            .sidebar .nav-link:hover {
                background-color: #334155;
                color: #fff;
                transform: translateX(4px);
            }

            /* Active state */
            .sidebar .nav-link.active {
                background-color: #3B82F6;
                color: white !important;
            }

        /* Content area */
        .main-content {
            margin-left: 260px;
            padding: 35px;
            transition: margin-left 0.3s ease;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">

        <!-- HRMS HEADER -->
        <div class="sidebar-header">
            HR<span>MS</span>
        </div>

        <nav class="nav flex-column px-3">

            <!-- 1. DASHBOARD (Everyone) -->
            <!-- CRITICAL FIX: asp-area="" (Empty Quotes) -->
            <!-- This forces the link to go to the Main Controllers folder, not the Area -->
            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home"></i> Dashboard
            </a>

            <!-- 2. MY PROFILE (Everyone) -->
            <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="MyProfile">
                <i class="fas fa-id-card"></i> My Profile
            </a>

            <!-- ============================================== -->
            <!-- 3. ATTENDANCE SECTION (UPDATED) -->
            <!-- ============================================== -->
            <!-- My Attendance: Visible to Everyone -->
            <a class="nav-link" asp-area="Attendance" asp-controller="Track" asp-action="Index">
                <i class="fas fa-user-clock"></i> My Attendance
            </a>

            <!-- Admin/Manager Only Features -->
            @if (User.IsInRole("Manager") || User.IsInRole("HRAdmin") || User.IsInRole("SystemAdmin"))
            {
                <!-- Shift Planning (Configuration) -->
                <a class="nav-link" asp-area="Attendance" asp-controller="Shift" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i> Shift Planning
                </a>

                <!-- Attendance Ops (Sync Leaves, Corrections) - NEW LINK -->
                <a class="nav-link" asp-area="Attendance" asp-controller="AttendanceManager" asp-action="Index">
                    <i class="fas fa-tasks"></i> Attendance Ops
                </a>
            }
            <!-- ============================================== -->
            <!-- 4. LEAVES (Everyone) -->
            <a class="nav-link" asp-area="Employee" asp-controller="Leave" asp-action="Index">
                <i class="fas fa-calendar-alt"></i> Leave Management
            </a>

            <!-- 5. MISSIONS (Everyone) -->
            <a class="nav-link" asp-area="Employee" asp-controller="Mission" asp-action="Index">
                <i class="fas fa-briefcase"></i> Missions
            </a>

            <!-- ============================================== -->
            <!-- ROLE SPECIFIC SECTIONS -->
            <!-- ============================================== -->
            <!-- MANAGER ONLY -->
            @if (User.IsInRole("Manager") || User.IsInRole("SystemAdmin"))
            {
                <a class="nav-link" asp-area="Employee" asp-controller="Manager" asp-action="Index">
                    <i class="fas fa-users-cog"></i> My Team
                </a>

                <!-- UPDATED: Pointing to Attendance Area now -->
                <a class="nav-link" asp-area="Attendance" asp-controller="TeamAttendance" asp-action="Index">
                    <i class="fas fa-user-clock"></i> Team Attendance
                </a>
            }

            <!-- HR ADMIN ONLY -->
            @if (User.IsInRole("HRAdmin"))
            {
                <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-users"></i> All Employees
                </a>
                <a class="nav-link" asp-area="Employee" asp-controller="HRAdmin" asp-action="ProfileCompleteness">
                    <i class="fas fa-check-circle"></i> Profile Completeness
                </a>
                <a class="nav-link" asp-area="Employee" asp-controller="Contract" asp-action="Index">
                    <i class="fas fa-file-contract me-2"></i> Contracts
                </a>
            }

            <!-- SYSTEM ADMIN ONLY -->
            @if (User.IsInRole("SystemAdmin"))
            {
                <a class="nav-link" asp-area="Employee" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-users"></i> Employee Directory
                </a>
                <a class="nav-link" asp-area="Employee" asp-controller="Role" asp-action="Index">
                    <i class="fas fa-user-shield"></i> Roles Management
                </a>
                <a class="nav-link" asp-controller="AdminSettings" asp-action="Index">
                    <i class="fas fa-cog"></i> System Settings
                </a>
            }

        </nav>

        <!-- LOGOUT SECTION (Pinned to Bottom) -->
        <div class="p-3 border-top border-secondary" style="background-color: rgba(0,0,0,0.2);">
            @if (User.Identity!.IsAuthenticated)
            {
                <div class="d-flex align-items-center mb-3 text-white-50 small">
                    <div class="me-2">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </div>
                    <div>
                        <span class="d-block text-white fw-bold">@User.Identity.Name</span>
                        <span class="d-block" style="font-size: 0.8em;">Logged In</span>
                    </div>
                </div>
            }

            <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-danger w-100 btn-sm shadow-sm">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
            </a>
        </div>

    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>