@model IEnumerable<HRMS_M3_VS.Areas.Attendance.Models.AttendanceLogDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Attendance";
}

<div class="container-fluid p-0">

    <!-- 1. HEADER & BUTTONS -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">
            <i class="fa fa-history me-2"></i>My Attendance
        </h2>

        <div>
            <a class="btn btn-primary" asp-action="Record">
                <i class="fa fa-edit me-1"></i> Record Attendance
            </a>
            <a class="btn btn-outline-warning ms-2" asp-action="Correction">
                <i class="fa fa-tools me-1"></i> Fix Issue
            </a>
        </div>
    </div>

    <!-- 2. MESSAGES -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fa fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fa fa-info-circle me-2"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 3. HISTORY TABLE -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Attendance Logs</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Date</th>
                        <th>Shift</th>
                        <th>In Time</th>
                        <th>Out Time</th>
                        <th>Duration</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fa fa-clipboard-list fa-3x mb-3 opacity-25"></i>
                                <p>No attendance records found.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var log in Model)
                        {
                            <tr>
                                <!-- Date -->
                                <td class="ps-4 fw-bold text-dark">
                                    @(log.entry_time.HasValue? log.entry_time.Value.ToString("MMM dd, yyyy") : "-")
                                </td>

                                <!-- Shift -->
                                <td>
                                    <span class="badge bg-light text-dark border">@log.shift_name</span>
                                </td>

                                <!-- In -->
                                <td class="text-success font-monospace">
                                    @(log.entry_time.HasValue? log.entry_time.Value.ToString("hh:mm tt") : "-")
                                </td>

                                <!-- Out -->
                                <td class="text-danger font-monospace">
                                    @(log.exit_time.HasValue? log.exit_time.Value.ToString("hh:mm tt") : "-")
                                </td>

                                <!-- Duration -->
                                <td class="fw-bold text-secondary">
                                    @log.duration
                                </td>

                                <!-- Status Badge -->
                                <td>
                                    @if (log.login_method != null && (log.login_method.Contains("Leave")))
                                    {
                                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill">On Leave</span>
                                    }
                                    else if (log.exception_id != null)
                                    {
                                        <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill">Exception</span>
                                    }
                                    else if (log.entry_time != null && log.exit_time == null)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                            <i class="fa fa-circle me-1" style="font-size: 0.5em;"></i> Working
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-secondary border rounded-pill">Completed</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>