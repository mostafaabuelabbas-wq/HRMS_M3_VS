@model HRMS_M3_VS.Areas.Employee.Models.EmployeeDto
@using System.Security.Claims

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">

    <!-- Profile Card -->
    <div class="card border-0 shadow-lg overflow-hidden">
        
        <!-- HEADER / BANNER -->
        <div class="position-relative" style="height: 220px; background: linear-gradient(135deg, var(--bg-surface-elevated) 0%, var(--bg-body) 100%);">
            
            <!-- ACTION BUTTONS: Top Right -->
            <div class="position-absolute top-0 end-0 p-4 d-flex gap-2">
                
                <!-- Back Buttons Logic -->
                @{
                    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                    // HR Admin Back
                    if (User.IsInRole("HRAdmin") && currentUserId != null && Model.Employee_Id.ToString() != currentUserId)
                    {
                        <a asp-controller="HRAdmin" asp-action="ProfileCompleteness" class="btn btn-secondary shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Report
                        </a>
                    }
                    // Manager Back
                    if (User.IsInRole("Manager") && currentUserId != null && Model.Employee_Id.ToString() != currentUserId)
                    {
                        <a asp-controller="Manager" asp-action="Index" class="btn btn-secondary shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Team
                        </a>
                    }
                }

                <!-- Edit Button Logic -->
                @{
                    bool canEdit = false;
                    if (User.IsInRole("HRAdmin") || User.IsInRole("SystemAdmin")) { canEdit = true; }
                    else if (currentUserId != null && Model.Employee_Id.ToString() == currentUserId) { canEdit = true; }

                    if (canEdit)
                    {
                         <a asp-action="Edit" asp-route-id="@Model.Employee_Id" class="btn btn-primary shadow-sm">
                            <i class="fas fa-pen me-2"></i> Edit
                        </a>
                    }
                }
            </div>
        </div>

        <!-- PROFILE BODY -->
        <div class="card-body px-4 px-md-5 pb-5">

            <!-- AVATAR & NAME ROW -->
            <div class="row mb-5">
                <!-- Avatar Column -->
                <div class="col-lg-auto text-center text-lg-start" style="margin-top: -100px;">
                    <div class="position-relative d-inline-block">
                        @if (Model.Profile_Image != null && Model.Profile_Image.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(Model.Profile_Image);
                            <img src="data:image/*;base64,@base64" class="rounded-circle shadow-lg"
                                 style="width: 160px; height: 160px; object-fit: cover; border: 6px solid var(--bg-card); background-color: var(--bg-card);"
                                 onerror="this.src='https://ui-avatars.com/api/?name=@Model.Full_Name&background=random&size=160';"
                                 alt="Profile" />
                        }
                        else
                        {
                            <img src="https://ui-avatars.com/api/?name=@Model.Full_Name&background=random&size=160"
                                 class="rounded-circle shadow-lg"
                                 style="width: 160px; height: 160px; object-fit: cover; border: 6px solid var(--bg-card); background-color: var(--bg-card);"
                                 alt="Default" />
                        }
                    </div>
                </div>

                <!-- Name & Details Column -->
                <div class="col-lg pt-3 ps-lg-4 text-center text-lg-start">
                    <h1 class="fw-bold mb-1">@Model.Full_Name</h1>
                    <p class="text-muted fs-5 mb-3">@Model.Position</p>
                    
                    <div class="d-flex justify-content-center justify-content-lg-start gap-2">
                        <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                            <i class="fas fa-building me-2"></i> @Model.Department
                        </span>
                        <span class="badge rounded-pill bg-success px-3 py-2">
                            <i class="fas fa-circle me-2 small"></i> @Model.Employment_Status
                        </span>
                    </div>
                </div>
            </div>

            <!-- INFORMATION GRID -->
            <div class="row g-4">

                <!-- MAIN INFO -->
                <div class="col-lg-8">
                    <div class="card h-100 border border-subtle shadow-sm" style="background-color: var(--bg-surface);">
                        <div class="card-header border-bottom border-subtle bg-transparent py-3">
                            <h6 class="mb-0 text-uppercase fw-bold text-primary" style="letter-spacing: 1px; font-size: 0.8rem;">
                                <i class="fas fa-user-circle me-2"></i> Personal Information
                            </h6>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="p-3 rounded-3 h-100 border border-subtle" style="background-color: var(--bg-body);">
                                        <label class="d-block text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Email Address</label>
                                        <div class="fw-bold text-white text-break">@Model.Email</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 rounded-3 h-100 border border-subtle" style="background-color: var(--bg-body);">
                                        <label class="d-block text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Phone Number</label>
                                        <div class="fw-bold text-white">@Model.Phone</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 rounded-3 h-100 border border-subtle" style="background-color: var(--bg-body);">
                                        <label class="d-block text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Address</label>
                                        <div class="fw-bold text-white">@Model.Address</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 rounded-3 h-100 border border-subtle" style="background-color: var(--bg-body);">
                                        <label class="d-block text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Hire Date</label>
                                        <div class="fw-bold text-white">@(Model.Hire_Date?.ToShortDateString() ?? "N/A")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- EMERGENCY CONTACT -->
                <div class="col-lg-4">
                    <div class="card h-100 border border-danger border-opacity-25 shadow-sm" style="background-color: rgba(255, 68, 68, 0.03);">
                        <div class="card-header border-bottom border-danger border-opacity-10 bg-transparent py-3">
                            <h6 class="mb-0 text-uppercase fw-bold text-danger" style="letter-spacing: 1px; font-size: 0.8rem;">
                                <i class="fas fa-heartbeat me-2"></i> Emergency Contact
                            </h6>
                        </div>
                        <div class="card-body p-4 d-flex flex-column justify-content-center gap-4">
                             <!-- Single Block Design for Emergency -->
                             <div class="p-3 rounded-3 border border-danger border-opacity-10" style="background-color: var(--bg-body);">
                                <div class="mb-3">
                                    <label class="d-block text-danger text-uppercase small fw-bold mb-1 opacity-75" style="font-size: 0.65rem;">Contact Name</label>
                                    <div class="fw-bold text-white">@(Model.Emergency_Contact_Name ?? "Not Provided")</div>
                                </div>
                                <div class="mb-3">
                                    <label class="d-block text-danger text-uppercase small fw-bold mb-1 opacity-75" style="font-size: 0.65rem;">Relationship</label>
                                    <div class="fw-bold text-white">@(Model.Relationship ?? "N/A")</div>
                                </div>
                                <div>
                                    <label class="d-block text-danger text-uppercase small fw-bold mb-1 opacity-75" style="font-size: 0.65rem;">Phone</label>
                                    <div class="fw-bold text-danger">
                                        <i class="fas fa-phone-alt me-2"></i>@(Model.Emergency_Contact_Phone ?? "N/A")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>