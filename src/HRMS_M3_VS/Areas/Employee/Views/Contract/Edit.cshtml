@model HRMS_M3_VS.Areas.Employee.Models.ContractEditViewModel
@{
    ViewData["Title"] = "Edit Contract";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-pen"></i> Edit Contract #@Model.ContractId</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input asp-for="ContractId" type="hidden" />

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Type" class="form-label fw-bold">Contract Type</label>
                        <input asp-for="Type" class="form-control" placeholder="e.g., FullTime, PartTime" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="CurrentState" class="form-label fw-bold">Status</label>
                        <select asp-for="CurrentState" class="form-select">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Expired">Expired</option>
                            <option value="Terminated">Terminated</option>
                        </select>
                        <span asp-validation-for="CurrentState" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.ContractId" class="btn btn-secondary shadow-sm">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}