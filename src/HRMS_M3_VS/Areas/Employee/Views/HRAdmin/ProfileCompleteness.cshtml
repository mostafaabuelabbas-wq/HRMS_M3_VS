@model IEnumerable<HRMS_M3_VS.Areas.Employee.Models.ProfileCompletenessDto>

<h2 class="fw-bold mb-4">Profile Completeness</h2>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Employee</th>
            <th>Department</th>
            <th>Position</th>
            <th>Missing Fields</th>
            <th>Status</th>
            <th>Fix</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Full_Name</td>
                <td>@emp.Department_Name</td>
                <td>@emp.Position_Title</td>

                <td class="text-danger fw-bold">@emp.MissingCount</td>

                <td>
                    @if (emp.MissingCount == 0)
                    {
                        <span class="badge bg-success">Complete</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Incomplete</span>
                    }
                </td>

                <td>
                    <a asp-area="Employee"
                       asp-controller="Home"
                       asp-action="Edit"
                       asp-route-id="@emp.Employee_Id"
                       class="btn btn-primary btn-sm">
                        Fix Profile
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
